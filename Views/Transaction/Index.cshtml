@using mvc_aspnetcore_incomes_and_expenses.Models.Enums
@model IEnumerable<mvc_aspnetcore_incomes_and_expenses.Models.Transaction>

@{
    decimal incomes = Model.Where(t => t.Type == TransactionType.RECEITA).Sum(t => t.Amount);
    decimal expenses = Model.Where(t => t.Type == TransactionType.DESPESA).Sum(t => t.Amount);
    decimal total = incomes - expenses;

    ViewData["Title"] = "Visão Geral";
}

<div class="container mt-4">
    <div class="row g-4 text-center">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 bg-danger text-white">
                <div class="card-body">
                    <img src="img/icon-shopping-cart.png" alt="Despesas" style="height: 40px;" />
                    <h5 class="mt-3">Despesas</h5>
                    <h3 class="fw-bold">@expenses.ToString("C")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 bg-success text-white">
                <div class="card-body">
                    <img src="img/icon-bill.png" alt="Receitas" style="height: 40px;" />
                    <h5 class="mt-3">Receitas</h5>
                    <h3 class="fw-bold">@incomes.ToString("C")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 bg-warning text-dark">
                <div class="card-body">
                    <img src="img/icon-pie-chart.png" alt="Saldo" style="height: 40px;" />
                    <h5 class="mt-3">Saldo</h5>
                    <h3 class="fw-bold">@total.ToString("C")</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="text-end mt-4">
        <a class="btn btn-primary btn-lg shadow-sm" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Criar Novo
        </a>
    </div>

    <div class="card shadow-sm mt-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Transações</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Id)</th>
                        <th>@Html.DisplayNameFor(model => model.Type)</th>
                        <th>@Html.DisplayNameFor(model => model.Amount)</th>
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                        <th>@Html.DisplayNameFor(model => model.Date)</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="@(item.Type == TransactionType.RECEITA ? "text-success" : "text-danger")">
                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.Type)</td>
                            <td>@item.Amount.ToString("C")</td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td>@item.Date.ToString("dd/MM/yyyy")</td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning btn-sm text-white">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
