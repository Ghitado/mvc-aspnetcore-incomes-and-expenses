@model mvc_aspnetcore_incomes_and_expenses.Models.Transaction

@{
    ViewData["Title"] = "Excluir Transação";
}

<div class="container mt-4">
    <h1 class="mb-4 text-danger">Excluir Transação</h1>

    <div class="alert alert-warning" role="alert">
        <h5 class="mb-0">Tem certeza que deseja excluir esta transação?</h5>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 text-secondary">Valor</dt>
                <dd class="col-sm-9 fs-5">@Model.Amount.ToString("C")</dd>

                <dt class="col-sm-3 text-secondary">Data</dt>
                <dd class="col-sm-9 fs-5">@Model.Date.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3 text-secondary">Tipo</dt>
                <dd class="col-sm-9 fs-5">@Model.Type.ToString()</dd>

                <dt class="col-sm-3 text-secondary">Descrição</dt>
                <dd class="col-sm-9 fs-5">@Model.Description</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="d-flex gap-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger px-4">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary px-4 align-self-center">Cancelar</a>
    </form>
</div>
